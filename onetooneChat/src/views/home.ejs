                                d="M25 35.5C24.1716 35.5 23.5 36.1716 23.5 37C23.5 37.8284 24.1716 38.5 25 38.5V35.5ZM49.0607 38.0607C49.6464 37.4749 49.6464 36.5251 49.0607 35.9393L39.5147 26.3934C38.9289 25.8076 37.9792 25.8076 37.3934 26.3934C36.8076 26.9792 36.8076 27.9289 37.3934 28.5147L45.8787 37L37.3934 45.4853C36.8076 46.0711 36.8076 47.0208 37.3934 47.6066C37.9792 48.1924 38.9289 48.1924 39.5147 47.6066L49.0607 38.0607ZM25 38.5L48 38.5V35.5L25 35.5V38.5Z">
                            </path>
                        </svg>
                    </button>
                </span>
            </footer>

        </div>
    </div>
</body>

</html>
<!-- Socket.IO Script -->
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    const getInputValue = document.querySelector(".myInput");
    const sendButton = document.querySelector('.btn');
    const myul = document.querySelector('ul');

    // Move the listener outside of the button click event
    socket.on('recivemessage', (d) => {
        const createli = document.createElement('li');
        console.log(d);

        createli.textContent = d;
        myul.appendChild(createli); // Use the cached reference to 'myul'
    });

    // Add the click event handler
    sendButton.addEventListener('click', () => {
        const message = getInputValue.value;
        
        if (message.trim()) { // Ensure that the input is not empty
            socket.emit('chatMessage', message);
            getInputValue.value = ''; // Clear the input field after sending
        }
    });
</script>
